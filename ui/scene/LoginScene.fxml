<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.controllers.LoginController">
   <center>
      <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
         <children>
            <TextField fx:id="usernameTextField" layoutX="229.0" layoutY="166.0" onKeyPressed="#usernameKeyPress" promptText="username" text="username" />
            <PasswordField fx:id="passwordTextField" layoutX="229.0" layoutY="200.0" onKeyPressed="#passwordKeyPress" promptText="password" text="password" />
            <Button fx:id="loginButton" layoutX="278.0" layoutY="237.0" mnemonicParsing="false" onAction="#login" text="Login" />
            <Label layoutX="267.0" layoutY="113.0" text="Login Screen" />
            <Label fx:id="loginErrorLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="205.0" layoutY="283.0" prefHeight="17.0" prefWidth="190.0" text="Invalid username or password!" textAlignment="CENTER" textFill="RED" visible="false" />
         </children>
      </AnchorPane>
   </center>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
            <Menu mnemonicParsing="false" text="Help">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#showHelpDialog" text="Help" />
               </items>
            </Menu>
          <Menu mnemonicParsing="false" text="About">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#showAboutDialog" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
